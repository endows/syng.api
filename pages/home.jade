template(name='home')
  link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
  link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', rel='stylesheet')

  h1 アプリ
  .row
    .col.s1
      a(href='https://gunosy.com/').btn-floating.btn-large.waves-effect.waves-light.white
        img.responsive-img(src='http://appllio.com/sites/default/files/styles/icon60/public/gunosy-logo.png')
    .col.s1
      a(href='https://www.youtube.com/?gl=JP&hl=ja').btn-floating.btn-large.waves-effect.waves-light.white
        img.responsive-img(src='http://cdn-ak.f.st-hatena.com/images/fotolife/s/sattelle/20130831/20130831090807.jpg')
    .col.s1
      a(href='https://www.google.co.jp/?hl=en&gws_rd=cr&ei=Dr-rVcnuGoblmAWKrYX4CQ').btn-floating.btn-large.waves-effect.waves-light.white
        img.responsive-img(src='http://algorhythnn.jp/blg/wp/wp-content/uploads/2014/02/eye_google_old-250x250.png')
  h1 アクティビティ
  .row
    each contents
      .col.s4
        a(href=url)
          .card
            .card-image.waves-effect.waves-block.waves-light
              img.activator(src="http://capture.heartrails.com/400x300?#{url}")
            .card-content
              h6
                img(src="http://www.google.com/s2/favicons?domain=#{url}")
                span {{title}}
              h6
                span 閲覧中
                each watchers
                  img.circle(src=profile.image)
